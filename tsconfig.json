{
  "exclude": ["node_modules/", ".eslintrc.js"],
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true
  },
  "ts-node": {
    "swc": true
  }
}
